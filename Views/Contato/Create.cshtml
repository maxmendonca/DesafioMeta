@model MinhaWebApi.Models.ViewModels.ContatoViewModel

@{
    ViewData["Title"] = "Inclusão de Contato";
}

<h2>@ViewData["Title"]</h2>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Contato.Nome" class="control-label"></label>
                <input asp-for="Contato.Nome" class="form-control" />
                <span asp-validation-for="Contato.Nome" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Contato.TipoContatoId" class="control-label"></label>
                <select asp-for="Contato.TipoContatoId" asp-items="@(new SelectList(Model.TipoContato,"Id",
                "Descricao"))" class="form-control"></select>
            </div>

            <div class="form-group">
                <label asp-for="Contato.CanalContato" class="control-label"></label>
                <input asp-for="Contato.CanalContato" class="form-control" />
                <span asp-validation-for="Contato.CanalContato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contato.ObservacaoContato" class="control-label"></label>
                <input asp-for="Contato.ObservacaoContato" class="form-control" />
                <span asp-validation-for="Contato.ObservacaoContato" class="text-danger"></span>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-warning">Voltar</a> |
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}